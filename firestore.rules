rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is an admin
    function isAdmin() {
      return request.auth != null && 
        get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Site configuration and content - Read by anyone, Write by admin
    match /siteConfig/{configId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /wrestlers/{wrestlerId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /awards/{awardId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /news/{newsId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // User profiles - Owner can read/write, Admin can read
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Votes - Anyone can read (for results), Auth user can create
    match /votes/{voteId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow delete: if isAdmin();
    }

    // Diagnostic test collection
    match /test_connection/{testId} {
      allow read, write: if request.auth != null;
    }

  }
}
