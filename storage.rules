//       allow read, write: if request.auth != null;
//     }
//   }
// }

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is admin via Firestore
    function isAdmin() {
      return firestore.exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Publicly readable images
    match /{allPaths=**} {
      allow read: if true;
      
      // Only admins can upload/delete
      allow write: if request.auth != null && isAdmin();
    }
    
    // superstars folder
    match /superstars/{imageId} {
      allow read: if true;
      allow write: if request.auth != null && isAdmin();
    }
    
    // news folder
    match /news/{imageId} {
      allow read: if true;
      allow write: if request.auth != null && isAdmin();
    }
    
    // site folder (logo, etc)
    match /site/{imageId} {
      allow read: if true;
      allow write: if request.auth != null && isAdmin();
    }
  }
}
